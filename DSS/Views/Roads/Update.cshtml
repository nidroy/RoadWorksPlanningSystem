@{
    ViewData["Title"] = "Update Road Page";
}

@model Road

<h3 style="margin-bottom: 15px;">Изменить данные дороги</h3>

<form asp-controller="Roads" asp-action="Update" method="post">
    <input asp-for="Id" type="hidden" />

    <table border="1">
        <tr>
            <td><label asp-for="Number">Идентификационный номер дороги</label></td>
            <td><input asp-for="Number" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="Priority">Приоритет дороги</label></td>
            <td><input asp-for="Priority" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="LinkToPassport">Ссылка на паспорт дороги</label></td>
            <td><input asp-for="LinkToPassport" class="form-control" /></td>
        </tr>
    </table>

    <div style="margin-top: 15px;">
        <button type="submit" class="btn btn-success" onclick="replacePoints()">Сохранить</button>
    </div>
</form>

<script>
    function replacePoints() {
        var priority = document.getElementById("Priority");
        priority.value = priority.value.replace(/\./g, ',');
        document.getElementById("myForm").submit();
    }
</script>