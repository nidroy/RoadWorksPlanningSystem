@{
    ViewData["Title"] = $"Read Technical Conditions Of Road For {@Model.First().Year} Page";
}

@model IEnumerable<TechnicalConditionOfRoad>

<h2>Список технических состояний дороги (<button type="button" class="btn btn-link" onclick="openModal()"><h2>@Model.First().Road.Number</h2></button>) за @Model.First().Year год</h2>

<table border="1">
    <tr>
        <th>Месяц</th>
        <th>Техническое состояние</th>
        <th>Операции</th>
    </tr>
    @foreach (var technicalConditionOfRoad in Model)
    {
        <tr>
            <td>@technicalConditionOfRoad.Month</td>
            <td>@technicalConditionOfRoad.TechnicalCondition</td>
            <td style="text-align: center;">
                <div style="display: flex; gap: 15px;">
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Update", "TechnicalConditionsOfRoads", new { id = technicalConditionOfRoad.Id })'">Изменить</button>
                    <form asp-controller="TechnicalConditionsOfRoads" asp-action="Delete" asp-route-id="@technicalConditionOfRoad.Id" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить это техническое состояние?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </div>
            </td>
        </tr>
    }
</table>

<div id="Road" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>

        <h3 style="margin-bottom: 15px;">Данные дороги</h3>

        <table border="1">
            <tr>
                <th>Идентификационный номер дороги</th>
                <th>@Model.First().Road.Number</th>
            </tr>
            <tr>
                <td>Приоритет дороги</td>
                <td>@Model.First().Road.Priority</td>
            </tr>
            <tr>
                <td>Ссылка на паспорт дороги</td>
                <td>@Model.First().Road.LinkToPassport</td>
            </tr>
        </table>
    </div>
</div>

<script>
    // Функция открытия модального окна
    function openModal() {
        document.getElementById('Road').style.display = 'block';
    }

    // Функция закрытия модального окна
    function closeModal() {
        document.getElementById('Road').style.display = 'none';
    }

    // Закрытие модального окна при клике вне его
    window.onclick = function (event) {
        var modal = document.getElementById('Road');
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    };
</script>